<script>
    const refreshBtn = document.getElementById('refresh-btn')
    const gamesTable = document.getElementById('games-table')
    const gamesTableBody = document.getElementById('public-games-tbody')

    const createGameButton = document.getElementById('create-game-button')
    const createGameTitle = document.getElementById('create-game-title')
    const createGamePrivate = document.getElementById('create-game-private')

    const httpHeadersOption = {
        method: 'GET',
        headers: {}
    }

    let lastRefresh = Date.now()
    const resfreshRate = 1000

    refreshBtn.addEventListener('click', () => {
        if (lastRefresh + resfreshRate < Date.now()) {
            refresh();
            lastRefresh = Date.now()
        }
    })

    /**
     * Create game request
     */
    createGameButton.addEventListener('click', async (e) => {
        e.preventDefault()

        if (createGameTitle.value === '')
            return;

        const res = await fetch('/game/create', {
            method: 'POST',
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                name: createGameTitle.value,
                private: createGamePrivate.checked
            })
        })
        const data = await res.json()

        if (data.gameId === undefined) {
            // TODO flashMessage
            return
        }

        window.location.assign('/game/lobby/' + data.gameId)
    })

    function refresh() {
        fetch('/lp/refresh', httpHeadersOption)
            .then(response => response.json())
            .then(games => {
                createTable(games)
            });
    }

    function createTable(games) {
        gamesTableBody.replaceChildren();
        for (const game of games) {
            gamesTableBody.appendChild(createRow(game))
        }
    }

    function createRow(game) {
        const row = document.createElement('tr')

        row.appendChild(createTd(game.name))
        row.appendChild(createTd(Object.keys(game.players).length))

        const td = createTd()
        td.appendChild(createLink('Join', '/game/lobby/' + game._id))
        row.appendChild(td)

        return row
    }

    function createTd(innerText = '') {
        const td = document.createElement('td')
        td.innerText = innerText
        return td
    }

    function createLink(innerText, link) {
        const a = document.createElement('a')
        a.innerText = innerText
        a.href = link
        a.classList.add('btn', 'btn-success')
        return a
    }

    refresh()

